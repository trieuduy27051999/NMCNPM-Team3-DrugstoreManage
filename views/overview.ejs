<!DOCTYPE html>
<html>
  <head>
    <% include partials/head %>
  </head>

  <body>
    <header id="topnav">
      <% include partials/header %>
    </header>
    <div class="wrapper">
      <div class="container">
        <!-- Page-Title -->
        <div>
          <h5 class="page-title mb-3">Tổng quan</h5>
        </div>
        <div class="row">
          <div class="col-md-6 col-lg-3">
            <div class="widget-bg-color-icon card-box fadeInDown animated">
              <div class="bg-icon bg-icon-info pull-left">
                <i class="md md-attach-money text-info"></i>
              </div>
              <div class="text-right">
                <h3 class="text-dark">
                  <b class="counter"><%= totalIncome %></b>
                </h3>
                <p class="text-muted">Tổng doanh thu(đ)</p>
              </div>
              <div class="clearfix"></div>
            </div>
          </div>

          <div class="col-md-6 col-lg-3">
            <div class="widget-bg-color-icon card-box">
              <div class="bg-icon bg-icon-pink pull-left">
                <i class="md md-add-shopping-cart text-pink"></i>
              </div>
              <div class="text-right">
                <h3 class="text-dark"><b class="counter"><%= Income %></b></h3>
                <p class="text-muted">Đã bán hôm nay(đ)</p>
              </div>
              <div class="clearfix"></div>
            </div>
          </div>

          <div class="col-lg-3 col-sm-6">
            <div class="widget-panel widget-style-2 bg-white">
              <i class="md md-attach-money text-primary"></i>
              <h2 class="m-0 text-dark counter font-600"><%= monthIncome %></h2>
              <div class="text-muted m-t-5">Đã bán tháng này(đ)</div>
            </div>
          </div>

          <div class="col-lg-3 col-sm-6">
            <div class="widget-panel widget-style-2 bg-white">
              <i class="md md-add-shopping-cart text-pink"></i>
              <h2 class="m-0 text-dark counter font-600"><%= totalOrder %></h2>
              <div class="text-muted m-t-5">Tổng số hoá đơn</div>
            </div>
          </div>
        </div>

        <!-- end row -->

        <div class="row">
          <div class="col-lg-4">
            <div class="card-box">
              <h4 class="text-dark header-title m-t-0 m-b-30">
                Chỉ tiêu tháng này
              </h4>
              <div class="widget-chart text-center">
                <input
                  class="knob"
                  data-width="150"
                  data-height="150"
                  data-linecap="round"
                  data-fgColor="#fb6d9d"
                  value="80 "
                  data-skin="tron"
                  data-angleOffset="180"
                  data-readOnly="true"
                  data-thickness=".15"
                />
                <h5 class="text-muted m-t-20">Hôm nay</h5>
                <h2 class="font-600"><%= Income %>đ</h2>
                <ul class="list-inline m-t-15">
                  <li>
                    <h5 class="text-muted m-t-20">Chỉ tiêu</h5>
                    <h4 class="m-b-0">10000000đ</h4>
                  </li>

                  <li>
                    <h5 class="text-muted m-t-20">Đã thu</h5>
                    <h4 class="m-b-0"><%= monthIncome %>đ</h4>
                  </li>
                </ul>
              </div>
            </div>
          </div>

          <div class="col-lg-8">
            <div class="card-box">
              <h4 class="text-dark header-title m-t-0">Top 5 thuốc bán chạy</h4>

              <div class="table-responsive">
                <table class="table table-actions-bar m-b-0">
                  <thead>
                    <tr>
                      <th>Mã thuốc</th>
                      <th>Tên thuốc</th>
                      <th>Nhà cung cấp</th>
                      <th style="min-width: 80px;">Số lượng</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% top5.forEach(function(prod){ %>
                    <tr>
                      <td>
                        <span><%= prod.MASP %></span>
                      </td>
                      <td><%= prod.TENSP %></td>
                      <td>
                        <span class="text-custom"><%= prod.MANCC %></span>
                      </td>
                      <td>
                        <%= prod.buyCount %>
                      </td>
                    </tr>
                    <% }) %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- end row -->
    </div>

    <!-- jQuery  -->
    <script src="assets/js/jquery.min.js"></script>
    <script src="assets/js/bootstrap.min.js"></script>
    <script src="assets/js/detect.js"></script>
    <script src="assets/js/fastclick.js"></script>

    <script src="assets/js/jquery.slimscroll.js"></script>
    <script src="assets/js/jquery.blockUI.js"></script>
    <script src="assets/js/waves.js"></script>
    <script src="assets/js/wow.min.js"></script>
    <script src="assets/js/jquery.nicescroll.js"></script>
    <script src="assets/js/jquery.scrollTo.min.js"></script>

    <script src="assets/plugins/peity/jquery.peity.min.js"></script>

    <!-- jQuery  -->
    <script src="assets/plugins/waypoints/lib/jquery.waypoints.js"></script>
    <script src="assets/plugins/counterup/jquery.counterup.min.js"></script>

    <script src="assets/plugins/morris/morris.min.js"></script>
    <script src="assets/plugins/raphael/raphael-min.js"></script>

    <script src="assets/plugins/jquery-knob/jquery.knob.js"></script>

    <script src="assets/pages/jquery.dashboard.js"></script>

    <script src="assets/js/jquery.core.js"></script>
    <script src="assets/js/jquery.app.js"></script>

    <script type="text/javascript">
      jQuery(document).ready(function($) {
        $(".counter").counterUp({
          delay: 100,
          time: 1200
        });

        $(".knob").knob();
      });
    </script>
  </body>
</html>
