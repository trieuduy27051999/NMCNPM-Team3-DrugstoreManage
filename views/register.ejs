<!DOCTYPE html>
<html lang="en">
  <head>
    <% include partials/head %>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/jquery-datetimepicker/2.5.20/jquery.datetimepicker.min.css"
    />
    %>
  </head>

  <body>
    <div class="clearfix"></div>
    <div class="wrapper-page">
      <div class="card-box shadow border-success">
        <div class="panel-heading">
          <h3 class="text-center">
            <strong class="text-custom">Register</strong>
          </h3>
        </div>
        <div>
          <form method="POST" action="/register">
            <%if (message != "undefined") { %>
            <div
              class="form-group form-control error"
              style="background-color: #FFCCCC; font-weight: bold; color : rgb(210, 29, 29)"
            >
              <%= message %>
            </div>
            <% } %>
            <h4 class="mb-3"><b>Account</b></h4>
            <div class="form-group">
              <label for="txtUsername">Username</label>
              <input
                type="text"
                class="form-control"
                id="txtUsername"
                name="username"
                placeholder="john"
                required
                autofocus
              />
            </div>
            <div class="form-group">
              <label for="txtPassword">Password</label>
              <input
                type="password"
                class="form-control"
                id="txtPassword"
                name="password"
                required
              />
            </div>
            <div class="form-group">
              <label for="txtConfirm">Confirm</label>
              <input
                type="password"
                class="form-control"
                id="txtConfirm"
                name="password2"
                required
              />
            </div>

            <hr class="mb-4" />
            <h4 class="mb-3"><b>Information</b></h4>
            <div class="form-group">
              <label for="txtName">Name</label>
              <input
                type="text"
                class="form-control"
                id="txtName"
                name="name"
                placeholder="John Witch"
                required
              />
            </div>
            <div class="form-group">
              <label for="txtEmail">Address</label>
              <input
                type="text"
                class="form-control"
                id="txtEmail"
                name="address"
                placeholder="123 Quận Cam"
              />
            </div>
            <div class="form-group">
              <label for="txtEmail">Phone Number*</label>
              <input
                type="tel"
                class="form-control"
                id="txtEmail"
                name="phone"
                placeholder="0123456789"
                required
              />
            </div>
            <div class="form-group">
              <div class="checkbox checkbox-primary m-r-15">
                <input id="checkbox2" type="checkbox" name="isAdmin" />
                <label for="checkbox2">Tài khoản admin</label>
              </div>
            </div>

            <!-- <a type="submit" class="btn btn-danger" href="/" role="button">
                        <i class="fa fa-check" aria-hidden="true"></i>
                        Register
                    </a> -->
            <button type="submit" class="btn btn-danger">
              <i class="fa fa-check" aria-hidden="true"></i>
              Register
            </button>
          </form>
        </div>
      </div>
    </div>
    <% include partials/script %>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-datetimepicker/2.5.20/jquery.datetimepicker.full.min.js"></script>
  </body>
</html>
